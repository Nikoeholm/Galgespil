<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentindhold"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:background="#CC000000"
    android:layout_gravity="center_vertical|center_horizontal"
    tools:context="nikolaj.galgespil.Vinder_frag">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/vinder_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/hello_blank_fragment"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="-6dp" />

    <Button
        android:id="@+id/vinder_spiligen"
        android:layout_width="183dp"
        android:layout_height="63dp"
        android:gravity="center"
        android:onClick="OnClickListener"
        android:text="Spil igen"
        android:textSize="18sp"
        android:visibility="visible"
        android:textColor="#ffff"
        android:background="@color/holo_blue_dark"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vinder_info"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.804"
        app:layout_constraintHorizontal_bias="0.505" />

        <TextView
            android:id="@+id/vinder_ordet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordet"
            android:textSize="30sp"
            android:textColor="#ffff"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/vinder_info"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/vinder_spiligen"
            app:layout_constraintVertical_bias="0.439" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
