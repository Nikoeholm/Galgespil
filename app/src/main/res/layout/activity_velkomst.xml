<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nikolaj.galgespil.Velkomst_akt">

    <TextView
        android:id="@+id/textView_velkomst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="Velkommen til 'Galgespillet'"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="24sp"/>



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/galgeleg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:orientation="vertical"
        android:layout_weight="1">


        <Button
            android:id="@+id/button_startspil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:onClick="OnClickListener"
            android:layout_marginBottom="8dp"
            android:text="Start spil"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_regler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:onClick="OnClickListener"
            android:layout_marginBottom="8dp"
            android:text="Regler"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_indstillinger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:onClick="OnClickListener"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:paddingBottom="8dp"
            android:text="Indstillinger"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
